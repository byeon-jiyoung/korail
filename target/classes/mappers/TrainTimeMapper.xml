<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yi.mapper.TrainTimeMapper">
	
	<resultMap type="TrainTime" id="resultTrainTime">
		<id column="tt_no" property="ttNo"/>
		<result column="tt_start_time" property="ttStartTime"/>
		<association property="tCode" resultMap="com.yi.mapper.TrainMapper.resultTrain2" />
		<association property="pNo" resultMap="com.yi.mapper.PriceMapper.resultPrice2" />
	</resultMap>
	
	<select id="listTrainTime" resultMap="resultTrainTime">
		select * from train_time tt join price p on tt.p_no = p.p_no
	</select>
	
	<select id="ListStartTimeByPno" resultMap="resultTrainTime">
		select * from train_time where p_no in (
		select p_no from priceTrainTime where start_nodename = #{startname} and arrive_nodename = #{arrivename})
	</select>
	
</mapper>